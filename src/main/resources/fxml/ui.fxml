<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="root" dividerPositions="0.2" prefHeight="800.0" prefWidth="1600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.vecolo.vekanban.controllers.UiController">
   <items>
      <VBox spacing="10.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label fx:id="helloLabel" alignment="CENTER" prefWidth="600.0" styleClass="h4" text="Label" />
                  <ToggleButton fx:id="projectButton" mnemonicParsing="false" onAction="#changeBox" prefHeight="50.0" prefWidth="600.0" text="MES PROJETS">
                     <VBox.margin>
                        <Insets top="100.0" />
                     </VBox.margin>
                  </ToggleButton>
                  <ToggleButton fx:id="newProjectButton" layoutX="20.0" layoutY="154.0" mnemonicParsing="false" onAction="#changeBox" prefHeight="50.0" prefWidth="600.0" text="NOUVEAU PROJET" />
                  <ToggleButton fx:id="profilButton" layoutX="20.0" layoutY="215.0" mnemonicParsing="false" onAction="#changeBox" prefHeight="50.0" prefWidth="600.0" text="MON PROFIL" />
               </children>
            </VBox>
            <Button fx:id="logoutButton" onAction="#logout" prefHeight="33.0" prefWidth="500.0" snapToPixel="false" text="Logout">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <StackPane fx:id="rootStackPane">
         <children>
            <VBox fx:id="projectBox" spacing="20.0" visible="false">
               <children>
                  <Label styleClass="h1" text="Mes projets" />
                  <ScrollPane prefHeight="300.0" vbarPolicy="NEVER">
                     <content>
                        <HBox fx:id="projectOwningListBox" spacing="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </content>
                  </ScrollPane>
                  <Label layoutX="10.0" layoutY="10.0" styleClass="h1" text="Partagé avec moi" />
                  <ScrollPane layoutX="10.0" layoutY="78.0" prefHeight="300.0" vbarPolicy="NEVER">
                     <content>
                        <HBox fx:id="projectMemberListBox" spacing="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </content>
                  </ScrollPane>
               </children>
               <StackPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </StackPane.margin>
            </VBox>
            <VBox fx:id="newProjectBox" fillWidth="false" spacing="20.0">
               <children>
                  <Label styleClass="h1" text="Nouveau projet" />
                  <Label styleClass="h2" text="Nom du projet :">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="newProjectName" promptText="Entrez le nom du projet" style="-fx-border-color: #fefefe; -fx-border-radius: 5;" styleClass="h3">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TextField>
                  <Label layoutX="10.0" layoutY="98.0" styleClass="h2" text="Préfix des cartes (optionel) :" />
                  <TextField fx:id="newProjectPrefix" layoutX="10.0" layoutY="157.0" promptText="Entrez un prefix" style="-fx-border-color: #fefefe; -fx-border-radius: 5;" styleClass="h3">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TextField>
                  <Label layoutX="10.0" layoutY="98.0" styleClass="h2" text="Inviter des membres">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="10.0">
                     <children>
                        <TextField fx:id="newProjectMemberEmail" prefHeight="40.0" prefWidth="290.0" style="-fx-border-color: #fefefe; -fx-border-radius: 5;" />
                        <Button mnemonicParsing="false" onAction="#addNewProjectMember">
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/plus_24px.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="222.0" prefWidth="350.0">
                     <content>
                        <VBox fx:id="newProjectMembersBox" spacing="10.0" />
                     </content>
                  </ScrollPane>
                  <Button mnemonicParsing="false" onAction="#createProject" styleClass="h3" text="Créer le projet" />
               </children>
               <StackPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </StackPane.margin>
            </VBox>
            <VBox fx:id="profilBox" layoutX="10.0" layoutY="10.0" visible="false">
               <children>
                  <Label styleClass="h1" text="Profil Box" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </items>
</SplitPane>
